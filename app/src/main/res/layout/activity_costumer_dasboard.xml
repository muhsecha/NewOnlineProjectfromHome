<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CostumerDasboard">


    <ImageView
        android:id="@+id/ivgambar"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@mipmap/background"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ivCloud"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="224dp"
        android:layout_marginLeft="224dp"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="84dp"
        android:src="@mipmap/cloud"
        app:layout_constraintBottom_toBottomOf="@+id/ivgambar"
        app:layout_constraintEnd_toEndOf="@+id/ivgambar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/tvSelamat"
        app:layout_constraintStart_toEndOf="@+id/tvSelamat"
        app:layout_constraintTop_toTopOf="@id/ivgambar"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvSelamat"
        android:text="Selamat Pagi"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:layout_marginTop="85dp"
        android:paddingLeft="25dp"
        app:layout_constraintStart_toStartOf="@id/ivgambar"
        app:layout_constraintTop_toTopOf="@id/ivgambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvUser"
        android:text="Muhammad Secha"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:paddingLeft="25dp"
        app:layout_constraintStart_toStartOf="@id/ivgambar"
        app:layout_constraintTop_toBottomOf="@id/tvSelamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivgambar"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="60dp"
                    android:text="MULAI SEWA LAPTOP"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/produksi"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:clickable="true"
                        app:cardCornerRadius="5dp"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@drawable/card"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:padding="15dp"
                                android:text="SEWA"
                                android:textColor="@color/hitam" />

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/rent" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/persiapan"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        app:cardCornerRadius="5dp"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:padding="15dp"
                                android:text="DURASI"
                                android:textColor="@color/hitam" />

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/duration" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/rpl"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_margin="5dp"
                        android:clickable="true"
                        app:cardCornerRadius="5dp"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:id="@+id/lnrpl"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:gravity="center"
                                android:padding="15dp"
                                android:text="ABOUT"
                                android:textColor="@color/hitam" />

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/about" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>